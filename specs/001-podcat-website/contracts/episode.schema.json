{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://podcat.example.com/schemas/episode.json",
  "title": "Episode",
  "description": "Podcast episode data structure for Podcat website",
  "type": "object",
  "required": ["id", "title", "date", "description", "episodeNumber"],
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the episode",
      "minimum": 1,
      "maximum": 20
    },
    "title": {
      "type": "string",
      "description": "Episode title in Traditional Chinese",
      "minLength": 1,
      "maxLength": 100
    },
    "date": {
      "type": "string",
      "description": "Publication date in ISO 8601 format",
      "format": "date",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "description": {
      "type": "string",
      "description": "Brief episode description (50-100 characters recommended)",
      "minLength": 1,
      "maxLength": 300
    },
    "episodeNumber": {
      "type": "string",
      "description": "Episode number for display (e.g., EP01, EP15)",
      "pattern": "^EP\\d{2}$"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "id": 1,
      "title": "TypeScript 的演進：從 JavaScript 到型別安全",
      "date": "2025-01-15",
      "description": "探討 TypeScript 如何改變前端開發生態，以及靜態型別系統為大型專案帶來的價值。",
      "episodeNumber": "EP01"
    },
    {
      "id": 2,
      "title": "Rust 的記憶體管理哲學",
      "date": "2025-01-22",
      "description": "深入解析 Rust 的所有權系統，以及如何在沒有垃圾回收的情況下確保記憶體安全。",
      "episodeNumber": "EP02"
    }
  ]
}
